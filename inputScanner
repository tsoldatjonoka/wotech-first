import java.util.Scanner;  // Import the Scanner class

class Main {
  public static void main(String[] args) {
    Scanner nameOb = new Scanner(System.in);  // Create a Scanner object
    System.out.println("Enter username");

    String userName = nameOb.nextLine();  // Read user input
    System.out.println("Username is: " + userName);  // Output user input

    Scanner nameOb2 = new Scanner(System.in);  // Create a Scanner object2
    System.out.println("Enter password ");

    String userName2 = nameOb2.nextLine();  // Read user input2
    System.out.println("Password: " + userName2);  // Output user input2
  }
}
